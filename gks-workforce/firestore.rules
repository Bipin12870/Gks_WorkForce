rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'ADMIN';
    }
    
    // Helper function to check if user is staff
    function isStaff() {
      return isAuthenticated() && getUserData().role == 'STAFF';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(staffId) {
      return isAuthenticated() && request.auth.uid == staffId;
    }
    
    // Users collection
    match /users/{userId} {
      // Only admins can create users
      allow create: if isAdmin();
      
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Only admins can update users
      allow update: if isAdmin();
      
      // No one can delete users
      allow delete: if false;
    }
    
    // Availability collection
    match /availability/{availabilityId} {
      // Staff can create their own availability
      allow create: if isStaff() && request.resource.data.staffId == request.auth.uid;
      
      // Staff can read their own, admins can read all submitted
      allow read: if isOwner(resource.data.staffId) || 
                     (isAdmin() && resource.data.status == 'SUBMITTED');
      
      // Staff can update their own availability
      allow update: if isStaff() && resource.data.staffId == request.auth.uid;
      
      // Staff can delete their own availability
      allow delete: if isStaff() && resource.data.staffId == request.auth.uid;
    }
    
    // Shifts collection
    match /shifts/{shiftId} {
      // Only admins can create shifts
      allow create: if isAdmin();
      
      // Staff can read their own shifts, admins can read all
      allow read: if isOwner(resource.data.staffId) || isAdmin();
      
      // Only admins can update shifts
      allow update: if isAdmin();
      
      // Only admins can delete shifts
      allow delete: if isAdmin();
    }
    
    // Time records collection
    match /timeRecords/{recordId} {
      // Staff can create their own time records
      allow create: if isStaff() && request.resource.data.staffId == request.auth.uid;
      
      // Staff can read their own, admins can read all
      allow read: if isOwner(resource.data.staffId) || isAdmin();
      
      // Staff can update their own time records (for clock-out)
      allow update: if isStaff() && resource.data.staffId == request.auth.uid;
      
      // No one can delete time records
      allow delete: if false;
    }
  }
}
